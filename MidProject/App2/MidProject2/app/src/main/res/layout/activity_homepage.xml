<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">

    <TextView
        android:id="@+id/texttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Homepage"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="220dp"
        android:backgroundTint="@color/Green123"
        android:text="Car"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/texttext" />

    <Button
        android:id="@+id/btnmc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/Green123"
        android:text="Motorcycle"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/texttext" />

    <ImageView
        android:id="@+id/imgcar"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/car"
        app:layout_constraintTop_toBottomOf="@id/btnmc1"/>

    <TextView
        android:id="@+id/namecar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="McLarren Senna"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgcar"/>

    <TextView
        android:id="@+id/dtlcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/namecar"
        android:visibility="invisible"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Brand : McLarren\nName : Senna\nTipe : Supercar\n Top Speed : 335 kph"/>

    <ImageView
        android:id="@+id/imgmc"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dwnl"
        app:layout_constraintTop_toBottomOf="@id/btnmc1"/>

    <TextView
        android:id="@+id/namemc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="GR Motorcycle"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgmc"/>

    <TextView
        android:id="@+id/dtlmc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/namemc"
        android:visibility="invisible"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Brand : Ghost\nName : Rider\nTipe : Manual\n Top Speed : 666 kph"/>

    <Button
        android:id="@+id/btntest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Green123"
        android:text="Test"
        android:textSize="30sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>